// import icon

@import '/assets/css/animate.css'
@import '/assets/css/bootstrap.min.css'
@import '/assets/css/lineicons.min.css'
@import '/assets/css/font-awesome.min.css'

body {
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji" !important
}

:root {
  --blue: #007bff;
  --indigo: #6610f2;
  --purple: #6f42c1;
  --pink: #e83e8c;
  --red: #dc3545;
  --orange: #fd7e14;
  --yellow: #ffc107;
  --green: #28a745;
  --teal: #20c997;
  --cyan: #17a2b8;
  --white: #fff;
  --gray: #6c757d;
  --gray-dark: #343a40;
  --primary: #007bff;
  --secondary: #6c757d;
  --success: #28a745;
  --info: #17a2b8;
  --warning: #ffc107;
  --danger: #dc3545;
  --light: #f8f9fa;
  --dark: #343a40;
  --breakpoint-xs: 0;
  --breakpoint-sm: 576px;
  --breakpoint-md: 768px;
  --breakpoint-lg: 992px;
  --breakpoint-xl: 1200px;
  --font-family-sans-serif: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
  --font-family-monospace: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

.hero img {
  padding-top 45px;
  padding-bottom 15px;
  width 400px;
}

.sidebar {
  font-weight 500
}

a.sidebar-link {
  border-bottom-right-radius unset !important
  border-top-right-radius unset !important
}

.theme-default-content:not(.custom) {
  max-width: 60rem !important;
}


.custom-block {
  border-top-right-radius: unset !important
  border-bottom-right-radius unset !important
}

.page .page-title {
  max-width: 60rem !important;
}

.page p {
  font-size: .9885rem;
  line-height: 1.65rem;
  font-weight 400;
  color: #333;
  margin-bottom: .5rem;
}

.page-nav {
  max-width: 60rem !important;
}

.breadcrumb {
  max-width: 60rem !important;
  position: relative;
  margin-top: 4.1rem;
  margin-bottom: -3rem !important;
  padding-top: .2rem;
  padding-bottom: .2rem;
  font-size: 15px;
  z-index: 2;
}

#anchor {
  left calc(100% + 5.5rem) !important
}

.table {
  font-size 0.95rem !important
}

.table .fa-copy {
  float: right;
  margin-right: 10px;
  color: #666;
  font-size: 12px;
  margin-top: 5px;
}

.table .fa-copy:hover {
  color: #3299FE;
}


.table .fa-copy:hover {
  color: #49b1f5;
}

.table .label-info {
  background-color: #ddd;
  display: inline;
  padding: .2em .6em .3em;
  font-size: 90%;
  font-weight: 500;
  line-height: 1;
  color: #4e555b;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 2px;
}

.page ul li:before {
  position: absolute;
  top: 12px;
  left: 0;
  margin-left: .15rem;
  width: .5rem;
  height: .5rem;
  background-color #49b1f5
  box-shadow: 0px .0rem .1rem #49b1f5
  border-radius: 50%;
  content: "";
  line-height 4rem;
  box-sizing unset !important
}

.page ul {
  list-style: none;
  counter-reset: li;
}

.page ul:not(.code-group-nav) li {
  position: relative;
  margin: .3rem 0;
  font-weight 400;
  padding: .1rem 1rem .1rem 1.5rem;
}

.counter ul {
  margin-top: .4rem;
  padding: 0 0 0 .9rem;
  list-style: none;
  counter-reset: li;
}

.counter ul li {
  position: relative;
  font-weight 400;
  margin: .3rem 0 !important;
  padding: .3rem 0rem .1rem 2rem !important;
}

.counter ul li:before {
  position: absolute;
  top: -3px;
  left: 0;
  background: #49b1f5;
  color: #fff;
  cursor: pointer;
  margin-top: .5rem;
  width: 1rem;
  height: 1rem;
  border-radius: 50%;
  border: .20rem solid #49b1f5;
  content: counter(li);
  counter-increment: li;
  text-align: center;
  font-size: .7rem;
  font-weight bold
  line-height: 1rem;
}

.anchor:before, .code-group-li:before {
  display none
}

.code-group-li {
  margin unset !important
  padding unset !important
}

.search-box .suggestions {
  top unset !important
}

.code-group-nav {
  display: flex;
  margin: .85rem 0 calc(-1.7rem - 7px);
  padding: 0 0 calc(1.7rem - 7px);
  border-top-left-radius: unset !important;
  border-top-right-radius: unset !important;
  background-color: #191d22;
  list-style: none;
}

.code-group-nav-tab {
  margin-top: 3px !important;
}

.code-group-nav-tab:before {
display none;
}

.code-group-nav > li {
  padding: 6px 10px !important
}

.code-group-nav > li:first-child {
  margin-left 5px;
}

div[class*='language-'] {
border-radius unset !important
}

div[class*=language-].line-numbers-mode:after {
border-radius unset !important
}

.copy-code-button .icon-copy-code {
margin-top: -12px !important
}
